@model IEnumerable<BE_U2_W2_D5.Models.Clienti>

@{
    ViewBag.Title = "ElencoClientiConTotale";
}

<h2>ElencoClientiConTotale</h2>


    <table class="table">
        <tr>
            <th>
                Nome
            </th>
            <th>
                Cognome
            </th>
            <th>
                Id Cliente
            </th>
            <th>
                Totale
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cognome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCliente)
                </td>
                <td>
                    @ViewBag.TotalePerCliente[item.IdCliente]
                </td>

            </tr>
        }

</table>
